<%- include("partials/header.ejs") %>

<h1>Welcome to better reads!</h1>

<h2><%= books %> </h2>
 
<% for (var i = 0; i < books.length; i++) { %> 
  <div>
  <img src= <%="https://covers.openlibrary.org/b/isbn/" + JSON.parse(books[i].book_isbn) + "-M.jpg" %> >
  <h3><%= books[i].title%></h3>
  <h3><%= books[i].author%></h3>
  <h3><%= books[i].notes%></h3>
  <h3><%= books[i].rating%></h3>
  <form method="POST" action="/edit">
    <input type="hidden" name="bookId" value=<%= JSON.parse(books[i].id) %>>
    <input type="submit" value="Edit"></form>
  <form method="POST" action="/delete">
    <input type="hidden" name="bookId" value=<%= JSON.parse(books[i].id) %>>
    <input type="submit" value="delete"></form>
  </div>
  <%}%>

